{
  "permissions": {
    "allow": [
      "mcp__filesystem__directory_tree",
      "mcp__filesystem__list_directory_with_sizes",
      "mcp__filesystem__read_multiple_files",
      "mcp__memory__search_nodes",
      "mcp__memory__create_entities",
      "mcp__memory__create_relations",
      "mcp__memory__add_observations",
      "mcp__strapi__strapi_list_servers",
      "mcp__convex__status",
      "Bash(pnpm lint*)",
      "Bash(pnpm check*)",
      "Bash(pnpm verify*)",
      "Bash(pnpm test*)",
      "Bash(pnpm build*)",
      "Bash(pnpm dev*)",
      "Bash(pnpm vitest run:*)",
      "Bash(npx tsc:*)",
      "Bash(npx convex data:*)",
      "Bash(npx convex logs:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "WebFetch(domain:play14.org)",
      "WebFetch(domain:community.play14.org)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_FILENAME\" =~ \\\\.(js|ts|jsx|tsx)$ ]]; then eslint --fix \"$CLAUDE_FILENAME\"; fi"
          }
        ]
      }
    ]
  }
}
